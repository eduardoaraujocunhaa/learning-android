<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_compras"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="usuario.app.sistemadecompras.ComprasActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv1"
        android:id="@+id/tv1" />

    <CheckBox
        android:text="@string/cb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkarroz"
        android:layout_below="@+id/tv1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <CheckBox
        android:text="@string/cb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkleite"
        android:layout_below="@+id/chkarroz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="@string/cb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkleite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/chkcarne" />

    <CheckBox
        android:text="@string/cb4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chkcarne"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/chkfeijao" />

    <Button
        android:text="@string/bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bttotal"
        android:layout_below="@+id/chkfeijao"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
